{
  "name": "nostr-publisher",
  "version": "0.2.1",
  "private": true,
  "description": "Write nostr articles with obsidian",
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "prepack": "pnpm build",
    "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
    "version": "node version-bump.mjs && git add manifest.json versions.json",
    "format": "prettier --write ."
  },
  "files": [
    "main.js",
    "styles.css",
    "manifest.json"
  ],
  "keywords": [
    "nostr",
    "publish",
    "obsidian",
    "article"
  ],
  "author": "hzrd149",
  "license": "MIT",
  "dependencies": {
    "@noble/hashes": "^1.8.0",
    "applesauce-accounts": "^2",
    "applesauce-actions": "^2",
    "applesauce-core": "^2",
    "applesauce-factory": "^2",
    "applesauce-loaders": "^2",
    "applesauce-relay": "^2",
    "applesauce-signers": "^2",
    "blossom-client-sdk": "^4.0.0",
    "nanoid": "^5.1.5",
    "nostr-tools": "^2.15.0",
    "qrcode-svg": "^1.1.0",
    "rxjs": "^7.8.2",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@types/node": "^16.18.126",
    "@types/qrcode-svg": "^1.1.5",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@types/uuid": "^9.0.8",
    "builtin-modules": "3.3.0",
    "esbuild": "0.17.3",
    "obsidian": "^1.8.7",
    "prettier": "^3.5.3",
    "tslib": "2.4.0",
    "typescript": "5.2.2"
  },
  "packageManager": "pnpm@9.15.6+sha512.139cab068fdf0b751268179ac5f909b5be72afb4a75c513d1905d151befc8977b593d3cf8671ed83d4d6637c5c94b98ffbce108125de4a5a27a31233601a99de"
}
